    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <activity android:name=".SplashScreen"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".pictures.PictureSlideActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".interestingfacts.InterestingFactsMain"
            android:screenOrientation="portrait"/>
        <activity android:name=".interestingfacts.IFScreenSlideActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".biography.BiographyMain"
            android:screenOrientation="portrait"/>
        <activity android:name=".allquotes.VPTMain"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuotesListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ScreenSlideActivity"
