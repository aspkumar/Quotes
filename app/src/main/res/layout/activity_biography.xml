<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- our toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:id="@+id/scrollview_biography"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:foregroundGravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_vivekananda"
        android:id="@+id/vivekananda_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Swami Vivekananda"
        android:gravity="center"
        android:id="@+id/vivekananda_TV"
       android:layout_below="@+id/vivekananda_icon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vivekananda_TV"
                android:id="@+id/content_TV"
                android:padding="5dp"
                android:textSize="18dp"
               />
        </RelativeLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/bioadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_id"
        android:layout_below="@+id/scrollview_biography"
        >
    </com.google.android.gms.ads.AdView>
</RelativeLayout>